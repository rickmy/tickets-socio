<style>
    .p-right {
        display: flex;
        justify-content: flex-end;
    }

    .form-group a {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size: 500;
    }
</style>


<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card text-center">
                <div class="card-header m-3">
                    <h3 style="color: #012E40;">LOGIN</h3>
                </div>
                <div class="card-body">
                    <img src="/img/logo_fondo_negro.jpg" class="card-img-top mx-auto m-2 rounded-circle w-50 mb-4" alt="logo">
                    <form action="/signin" method="POST">
                        <div class="form-group mt-2">
                            <input type="number" name="cedula" placeholder="Nro. Cedula" class="form-control"
                                autocomplete="off">
                        </div>
                        <div class=" form-group mt-2">
                            <input type="password" id="password" name="password" placeholder="Password"
                                class="form-control" autocomplete="off">
                        </div>

                        <div class="form-group mt-2">

                            <div class="mb-2">
                                <a href="signin/forgot">¿Olvidate tu constraseña?</a>
                            </div>

                            {{> message}}

                            <button class="btn btn-block text-light mt-3" style="background-color: #0a0a0a;">
                                Ingresar
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>